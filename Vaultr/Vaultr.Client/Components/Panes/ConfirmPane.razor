@inherits BaseSidePane

<div class="sidepane-section">
    <h3>Are you sure you want to delete @(EditContext.Entity.Id) on @(ButtonContext.CustomData)?</h3>
</div>

<div class="buttonbar">
    <button class="btn btn-danger" @onclick=@((e) => ButtonClicked(CrudType.Delete))>Yes</button>
    <button class="btn btn-dark" @onclick=@((e) => ButtonClicked(CrudType.None))>No</button>
</div>
